# Kanagawa color theme for Zathura
# Based on the Kanagawa color palette
set window-title-basename "true"
set selection-clipboard "clipboard"

# Base colors from Kanagawa palette
set notification-error-bg       "#E82424"     # samuraiRed
set notification-error-fg       "#DCD7BA"     # fujiWhite
set notification-warning-bg     "#FF9E3B"     # roninYellow
set notification-warning-fg     "#1F1F28"     # sumiInk3
set notification-bg             "#1F1F28"     # sumiInk3
set notification-fg             "#DCD7BA"     # fujiWhite

set completion-bg               "#1F1F28"     # sumiInk3
set completion-fg               "#727169"     # fujiGray
set completion-group-bg         "#2A2A37"     # sumiInk4
set completion-group-fg         "#727169"     # fujiGray
set completion-highlight-bg     "#223249"     # waveBlue1
set completion-highlight-fg     "#DCD7BA"     # fujiWhite

set index-bg                    "#1F1F28"     # sumiInk3
set index-fg                    "#DCD7BA"     # fujiWhite
set index-active-bg             "#223249"     # waveBlue1
set index-active-fg             "#DCD7BA"     # fujiWhite

set inputbar-bg                 "#1F1F28"     # sumiInk3
set inputbar-fg                 "#DCD7BA"     # fujiWhite

set statusbar-bg                "#1F1F28"     # sumiInk3
set statusbar-fg                "#DCD7BA"     # fujiWhite

set highlight-color             "#DCA561"     # autumnYellow (50% transparent)
set highlight-active-color      "#957FB8"     # oniViolet (50% transparent)

set default-bg                  "#16161D"     # sumiInk3
set default-fg                  "#DCD7BA"     # fujiWhite

set render-loading              true
set render-loading-bg           "#1F1F28"     # sumiInk3
set render-loading-fg           "#DCD7BA"     # fujiWhite

# Recolor mode settings
set recolor-lightcolor          "#1F1F28"     # sumiInk3 (Background)
set recolor-darkcolor           "#DCD7BA"     # fujiWhite (Foreground)

# Startup options
set adjust-open width
set recolor true
